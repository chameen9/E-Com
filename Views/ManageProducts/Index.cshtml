@model IEnumerable<E_Com.Models.Data.Products>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    dynamic? ProductsList = ViewData["ProductsList"];
}

<div class="row">
    <div class="col-2">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-2 d-none d-md-block bg-light sidebar" style="background-color:white;">
                    <div class="sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="ManageProducts" asp-action="Index">
                                    Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ManageOrders" asp-action="Index">
                                    Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ManageCategories" asp-action="Index">
                                    Categories
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ManageUsers" asp-action="Index">
                                    Users
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="col-10">
        <p>
            <a asp-action="Create" class="btn btn-danger">Add New Product <i class="fa fa-plus"></i> </a>
            <a asp-action="Create" class="btn btn-outline-danger">Generate a Report <i class="fa fa-file-pdf"></i> </a>
        </p>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Product Id</th>
                        @*<th>Image</th>*@
                        <th>
                            Name
                        </th>
                        @*<th>
                        Description
                        </th>*@
                        <th>
                            Type
                        </th>
                        <th>
                            Processor
                        </th>
                        <th>
                            Memory
                        </th>
                        <th>
                            VGA
                        </th>
                        <th>
                            OS
                        </th>
                        <th>
                            Storage
                        </th>
                        <th>
                            Price(Rs)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Product in ProductsList)
                    {
                        <tr>
                            <td>@Product.ProductId</td>
                            @*<td><img src="@Url.Content("~/img/" + Product.ImageFileName)" height="100px" width="100px" alt="Product Image"/></td>*@
                            <td>@Product.ProductName</td>
                            @* <td>@Product.ProductDescription</td>*@
                            <td>@Product.ProductCategory.ProductCategoryName</td>
                            <td>@Product.Processors.ProcessorBrand @Product.Processors.ProcessorType</td>
                            <td>@Product.MemoryDevices.MemoryBrand @Product.MemoryDevices.MemoryName</td>
                            <td>@Product.VGADevices.VGABrand</td>
                            <td>@Product.OperatingSytems.OSBrand @Product.OperatingSytems.OSVersion</td>
                            <td>@Product.StorageDevices.StorageDeviceName @Product.StorageDevices.StorageDeviceCapacity</td>
                            <td>@Product.Price</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@Product.ProductId" class="link-success"><i class="fa fa-pencil" title="Edit"></i></a>
                                <a asp-action="Details" asp-route-id="@Product.ProductId" class="link-info"><i class="fa-sharp fa-solid fa-eye" title="View"></i></a>
                                <a asp-action="Delete" asp-route-id="@Product.ProductId" class="link-danger"><i class="fa fa-trash" title="Delete"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

