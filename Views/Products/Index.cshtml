@model IEnumerable<E_Com.Models.Data.Products>

@{
    ViewData["Title"] = "Index";
    dynamic? ProductsList = ViewData["ProductsList"];
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Type
            </th>
            <th>
                Processor
            </th>
            <th>
                Memory
            </th>
            <th>
                VGA
            </th>
            <th>
                OS
            </th>
            <th>
                Storage
            </th>
            <th>
                Price(Rs)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Product in ProductsList)
        {
            <tr>
                <td>@Product.ProductId</td>
                <td>@Product.ProductName</td>
                <td>@Product.ProductDescription</td>
                <td>@Product.ProductCategory.ProductCategoryName</td>
                <td>@Product.Processors.ProcessorBrand @Product.Processors.ProcessorType</td>
                <td>@Product.MemoryDevices.MemoryBrand @Product.MemoryDevices.MemoryName</td>
                <td>@Product.VGADevices.VGABrand</td>
                <td>@Product.OperatingSytems.OSBrand @Product.OperatingSytems.OSVersion</td>
                <td>@Product.StorageDevices.StorageDeviceName @Product.StorageDevices.StorageDeviceCapacity</td>
                <td>@Product.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Product.ProductId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@Product.ProductId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Product.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
